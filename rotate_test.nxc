#define SPEED 75
#define TIRE OUT_AB
int direction = 0;
void rotate(long deg)
{
  if (deg > 0)
  {
    RotateMotorEx(TIRE, SPEED, deg * 1.45, 100, true, true);
    direction += deg;
  }
  else
  {
    RotateMotorEx(TIRE, SPEED, deg * 1.35, -100, true, true);
    direction -= deg;
  }
}

task main(){
  while(1){
    rotate(90);
    rotate(-90);
  }
}
